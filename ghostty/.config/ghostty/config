theme = Ayu

font-family = Osaka
# フォントを読みやすくする
font-thicken
# フォントサイズを指定
font-size = 16

# 背景はちょっと透過している黒
background = 000
background-opacity = 0.70

# カーソルはblockで点滅させない
cursor-style = block
cursor-style-blink = false

# タイピング中はマウスカーソルを非表示にする
mouse-hide-while-typing

# コマンドが終了したら表示内容を確認しておきたい
wait-after-command = true

# メニューバーのタイトルを非表示にする
title = " "

window-padding-x = 5
window-padding-y = 5
window-padding-balance = true

# ネイティブの全画面は使いたくない
macos-non-native-fullscreen = true
# メニューバーをできれば透過しておきたいな
macos-titlebar-style = transparent

# なんとなく色を変えてみる
macos-icon = custom-style
macos-icon-ghost-color = fa5
macos-icon-screen-color = 000

# 環境によって変えるかも
quick-terminal-screen = mouse

# クイックターミナルの設定
quick-terminal-position = "top"
quick-terminal-screen = "main"
quick-terminal-animation-duration = 0.3
keybind = "global:cmd+n=toggle_quick_terminal"
